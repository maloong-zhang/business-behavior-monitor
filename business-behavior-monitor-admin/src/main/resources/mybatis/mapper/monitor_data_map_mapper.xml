<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ae.zerotone.monitor.infrastructure.dao.IMonitorDataMapDao">

    <resultMap id="dataMap" type="ae.zerotone.monitor.infrastructure.po.MonitorDataMap">
        <id column="id" property="id"/>
        <result column="monitor_id" property="monitorId"/>
        <result column="monitor_name" property="monitorName"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
    <select id="queryMonitorDataMapEntityList" resultMap="dataMap">
        select monitor_id, monitor_name
        from monitor_data_map
    </select>

    <select id="queryMonitorNameByMonitoryId" parameterType="java.lang.String" resultType="java.lang.String">
        select monitor_name
        from monitor_data_map
        where monitor_id = #{monitorId}
    </select>

</mapper>
