<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ae.zerotone.monitor.infrastructure.dao.IMonitorDataMapNodeFieldDao">

    <resultMap id="dataMap" type="ae.zerotone.monitor.infrastructure.po.MonitorDataMapNodeField">
        <id column="id" property="id"/>
        <result column="monitor_id" property="monitorId"/>
        <result column="monitor_node_id" property="monitorNodeId"/>
        <result column="log_name" property="logName"/>
        <result column="log_index" property="logIndex"/>
        <result column="log_type" property="logType"/>
        <result column="attribute_name" property="attributeName"/>
        <result column="attribute_field" property="attributeField"/>
        <result column="attribute_ognl" property="attributeOgnl"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <select id="queryMonitorDataMapNodeList"
            parameterType="ae.zerotone.monitor.infrastructure.po.MonitorDataMapNodeField"
            resultMap="dataMap">
        select monitor_id,
               monitor_node_id,
               log_name,
               log_index,
               log_type,
               attribute_name,
               attribute_field,
               attribute_ognl
        from monitor_data_map_node_field
        where monitor_id = #{monitorId}
          and monitor_node_id = #{monitorNodeId}
    </select>


</mapper>
